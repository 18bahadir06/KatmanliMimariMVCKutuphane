﻿@model EntityLayer.Concrete.Author
@{
    ViewBag.Title = "UpdateAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yazar Güncelle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/AdminAuthor/Index">Home</a></li>
                        <li class="breadcrumb-item active">Yazar Güncelle</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Kütüphane Otomasyonu Yazar güncelleme Sayfası</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm("UpdateAuthor", "AdminAuthor", FormMethod.Post))
                        {
                            <div class="card-body">
                                <form role="form">
                                    <div class="form-group">
                                        @Html.Label("Yazar Id")
                                        @Html.TextBoxFor(x => x.AuthorId, new { @class = "form-control", @readonly = "readonly" })

                                        @Html.Label("Yazar Adı")
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Name)
                                        
                                        @Html.Label("Yazar Soyadı")
                                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Surname)
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </form>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


