
@{
    ViewBag.Title = "TotalOperation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Bütün işlemler</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Home</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Bütün işlemler</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table m-0">
                                    <thead>
                                        <tr>
                                            <th>İşlem ID</th>
                                            <th>Personel</th>
                                            <th>Öğrenci</th>
                                            <th>Kitap</th>
                                            <th>Teslim verilen tarih</th>
                                            <th>Teslim alınan tarih</th>
                                            <th>Teslim durumu</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ foreach (var i in Model)
                                            {
                                                <tr>
                                                    <td><a href="#">@i.OperationId</a></td>
                                                    <td>@i.Staffs.Name</td>
                                                    <td>@i.Students.Name @i.Students.Surname</td>
                                                    <td><span class="badge badge-info">@i.Books.Name</span></td>
                                                    <td>
                                                        <div class="sparkbar" data-color="#00a65a" data-height="20">@i.BorrowDate.ToString("yyyy-MM-dd")</div>
                                                    </td>
                                                    @if (i.DeliveryStatus)
                                                    {
                                                        <td>
                                                            <div class="sparkbar" data-color="#00a65a" data-height="20">@i.ReturnDate2.ToString("yyyy-MM-dd")</div>
                                                        </td>
                                                        <td>
                                                            <span class="badge badge-success">Teslim edildi</span>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>-</td>
                                                        <td><span class="badge badge-danger">Teslim edilmedi</span></td>
                                                    }
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>
