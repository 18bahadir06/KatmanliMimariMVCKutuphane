
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Personeller</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Home</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div style="text-align: right; ">
                        <a class="btn btn-app">
                            <a href="/AdminStaff/AddStaff" type="button" class="btn btn-info">Yeni Personel ekle</a>
                        </a>
                    </div>
                    <div class="card">

                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-valign-middle">
                                <thead>
                                    <tr>
                                        <th>Personel Id</th>
                                        <th>Ad Soyad</th>
                                        <th>Gmail</th>
                                        <th>ADMİN</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            <td>
                                                @i.StaffId
                                            </td>
                                            <td>@i.Name @i.Surname</td>
                                            <td>
                                                @i.Gmail
                                            </td>
                                            @if (i.Admin)
                                            {
                                                <td>
                                                    <span class="badge badge-success">Admin</span>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <span class="badge badge-danger">Personel</span>
                                                </td>
                                            }

                                            <td><a href="/AdminStaff/UpdateStaff/@i.StaffId" class="btn btn-warning">Güncelle</a></td>
                                            <td><a href="/AdminStaff/DeleteStaff/@i.StaffId" class="btn btn-danger">Sil</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>


