
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Öğrenciler</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Home</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div style="text-align: right; ">
                        <a class="btn btn-app">
                            <a href="/AdminStudent/AddStudent"  type="button" class="btn btn-block btn-info btn-lg">Yeni Öğrenci ekle</a>
                        </a>
                    </div>
                    <div class="card">
                        <div class="card-header border-0">
                            <h3 class="card-title">Öğrenciler</h3>
                            <div class="card-tools">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" placeholder="Öğrenci arama">
                                    <div class="input-group-append">
                                        <div class="btn btn-primary">
                                            <i class="fas fa-search"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-valign-middle">
                                <thead>
                                    <tr>
                                        <th>Öğrenci Id</th>
                                        <th>Ad Soyad</th>
                                        <th>Doğum Tarihi</th>
                                        <th>Mail</th>
                                        <th>Cinsiyet</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            <td>
                                                <!--<img src="dist/img/default-150x150.png" alt="Product 1" class="img-circle img-size-32 mr-2">-->
                                                @i.StudentId
                                            </td>
                                            <td><a href="/AdminOperation/StudentOperations/@i.StudentId">@i.Name @i.Surname</a></td>
                                            <td>
                                                @(((DateTime)i.DateBirth).ToString("dd-MMMM-yyyy"))
                                            </td>
                                            <td>
                                                @i.Gmail
                                            </td>
                                            @if (i.Gender)
                                            {
                                                <td style="background-color: cornflowerblue"></td>
                                            }
                                            else
                                            {
                                                {
                                                    <td style="background-color:pink"></td>
                                                }
                                            }

                                            <td><a href="/AdminStudent/UpdateStudent/@i.StudentId" class="btn btn-warning">Güncelle</a></td>
                                            <td><a href="/AdminStudent/DeleteStudent/@i.StudentId" class="btn btn-danger">Sil</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>     
            </div>           
        </div>    
</section>

</div>

